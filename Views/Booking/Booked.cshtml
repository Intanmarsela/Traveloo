@model TravelWeb.Models.Booking

@{
    ViewData["Title"] = "Booking Confirmed";
}

<div class="container text-center mt-5 mb-5 pb-5">
    <h2 class="text-success">🎉 Booking Confirmed!</h2>
    <p class="lead">Thank you for booking with Traveloo!</p>

    <div class="card mt-4 shadow-sm">
        <div class="card-body">
            <h4 class="card-title">Booking Summary</h4>
            <p><strong>Travel Package:</strong> @Model.TravelPackage?.Title</p>
            <p><strong>Travel Date:</strong> @Model.TravelPackage?.TravelDate.ToShortDateString()</p>
            <p><strong>Number of People:</strong> @Model.NumberOfPeople</p>
            <p><strong>Total Paid:</strong> $@(Model.NumberOfPeople * Model.TravelPackage?.Price)</p>
        </div>
    </div>

    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-4">Back to Home</a>
</div>
