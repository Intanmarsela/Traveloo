<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TravelWeb</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TravelWeb.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/png" href="~/favicon.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Traveloo</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Policy">Policy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                        </li>
                        <li class="nac-Link text-dark">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="TravelPackage">TravelPackage</a>
                        </li>
                        <!-- View Booked Travels for Tourist-->
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Tourist"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="MyBookings" asp-action="Index">My Bookings</a>
                            </li>
                        }

                        <!--This is will be showing the link to Upload Travel Package, if the user is login and role == agent -->
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Agent"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="UploadTravelPackage" asp-action="Create">
                                    Upload Travel Package
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="ManageBookings" asp-action="Index">Manage Bookings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="ManageTravelPackage" asp-action="Index">
                                    Manage My Travel Packages
                                </a>
                            </li>
                        }


                    </ul>


                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="flex-grow-1">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto border-top" style="padding: 10px 0; background-colour:  #FFB84D;">
        <div class="container text-center">
            <small class="text-muted">&copy; 2025 - Traveloo</small>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
