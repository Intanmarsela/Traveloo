@model TravelWeb.Models.TravelPackage

<h2>Edit Travel Package</h2>

<form asp-action="Edit" enctype="multipart/form-data" method="post" class="mb-5 pb-3">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="FullDescription"></label>
        <textarea asp-for="FullDescription" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="TravelDate"></label>
        <input asp-for="TravelDate" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="MaxGroupSize"></label>
        <input asp-for="MaxGroupSize" class="form-control" />
    </div>
    @if (!string.IsNullOrEmpty(Model.ImageUrls))
    {
        var images = Model.ImageUrls.Split(',');

        <div class="mb-3">
            <label>Current Images</label>
            <div class="d-flex flex-wrap">
                @for (int i = 0; i < images.Length; i++)
                {
                    var imgPath = "/images/agent_uploads/" + images[i];

                    <div class="m-2 text-center">
                        <img src="@imgPath" style="width: 150px; height: 100px; object-fit: cover;" class="rounded" />
                        <br />
                        <input type="checkbox" name="RemoveImages" value="@images[i]" /> Remove
                    </div>
                }
            </div>
        </div>
    }
    <div class="form-group mt-3">
        <label>Upload New Images</label>
        <input type="file" name="NewImages" multiple class="form-control" />
        <small class="form-text text-muted">You can upload additional images.</small>
    </div>


    <button type="submit" class="btn btn-primary mt-3 mb-5">Save</button>
</form>
