@model TravelWeb.Models.TravelPackage

@{
    ViewData["Title"] = "Upload Travel Package";
}

<h2>@ViewData["Title"]</h2>
<div class="container mb-5 pb-5">
    <form asp-action="UploadTravelPackage" enctype="multipart/form-data" method="post">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Summary"></label>
            <textarea asp-for="Summary" class="form-control"></textarea>
            <span asp-validation-for="Summary" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FullDescription"></label>
            <textarea asp-for="FullDescription" class="form-control" rows="4"></textarea>
            <span asp-validation-for="FullDescription" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TravelDate"></label>
            <input asp-for="TravelDate" type="date" class="form-control" />
            <span asp-validation-for="TravelDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MaxGroupSize"></label>
            <input asp-for="MaxGroupSize" type="number" class="form-control" />
            <span asp-validation-for="MaxGroupSize" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Upload Images</label>
            <input type="file" name="images" multiple class="form-control" />
            <small class="form-text text-muted">You can select multiple images.</small>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Submit Package</button>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
